[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
    whitespace = red reverse
  [color "status"]
    added = green
    changed = blue
    untracked = red
  [core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[push]
	default = simple
